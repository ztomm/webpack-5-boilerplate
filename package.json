{
	"name": "webpack-5-boilerplate",
	"version": "0.0.0",
	"description": "Webpack 5 Boilerplate: Node.js, Express, Pug, ES6, SASS, jQuery",
	"author": "Murat Karaca <dev@muratkaraca.de> (https://www.kmgt.de)",
	"license": "MIT",
	"scripts": {
		"build:prod": "webpack --mode=production --progress --profile",
		"watch:build": "webpack --watch --mode=development --progress --profile",
		"watch:server": "nodemon --trace-warnings --trace-deprecation app.js",
		"dev": "npm-run-all --parallel watch:build watch:server",
		"dev:windows": "(set NODE_ENV=development) && npm run dev",
		"dev:unix": "NODE_ENV=development npm run dev",
		"prod": "npm run build:prod && node --trace-warnings --trace-deprecation app.js",
		"prod:windows": "(set NODE_ENV=production) && npm run prod",
		"prod:unix": "NODE_ENV=production npm run prod"
	},
	"dependencies": {
		"body-parser": "^1.19.1",
		"compression": "^1.7.4",
		"config": "^3.3.7",
		"express": "^4.17.2",
		"express-session": "^1.17.2",
		"helmet": "^5.0.2",
		"jquery": "^3.6.0",
		"memorystore": "^1.6.6",
		"morgan": "^1.10.0",
		"pug": "^3.0.2",
		"winston": "^3.5.0"
	},
	"devDependencies": {
		"@babel/cli": "^7.16.7",
		"@babel/core": "^7.16.7",
		"@babel/preset-env": "^7.16.7",
		"acorn": "^8.7.0",
		"babel-loader": "^8.2.3",
		"babel-polyfill": "^6.26.0",
		"clean-webpack-plugin": "^4.0.0",
		"css-loader": "^6.5.1",
		"file-loader": "^6.2.0",
		"gulp-babel": "^8.0.0",
		"html-webpack-plugin": "^5.5.0",
		"html-webpack-pug-plugin": "^4.0.0",
		"mini-css-extract-plugin": "^2.4.6",
		"node-sass": "^7.0.1",
		"nodemon": "^2.0.7",
		"npm-run-all": "^4.1.5",
		"optimize-css-assets-webpack-plugin": "^6.0.1",
		"postcss-loader": "^6.2.1",
		"postcss-preset-env": "^7.2.0",
		"pug-loader": "^2.4.0",
		"sass-loader": "^12.4.0",
		"style-loader": "^3.3.1",
		"webpack": "^5.65.0",
		"webpack-cli": "^4.9.1"
	}
}
